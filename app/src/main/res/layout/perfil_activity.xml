<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp">

    <Space
        android:layout_width="0dp"
        android:layout_height="50dp"
        tools:ignore="Suspicious0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textConfUsu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario :" />

        <Space
            android:layout_width="60dp"
            android:layout_height="0dp"/>

        <EditText
            android:id="@+id/confEditUsu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Mi usuario"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textConfCorr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo :" />

        <Space
            android:layout_width="70dp"
            android:layout_height="0dp"/>

        <EditText
            android:id="@+id/confEditCorr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Mi correo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textConfCont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contrasena :" />

        <Space
            android:layout_width="40dp"
            android:layout_height="0dp"/>

        <EditText
            android:id="@+id/confEditCont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Mi contrasena"/>
    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonConfCamb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confimar cambios" />

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/buttonCambContr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cambiar contrasena" />


    </LinearLayout>

</LinearLayout>